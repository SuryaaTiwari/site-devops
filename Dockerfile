# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

# Production stage
FROM node:18-alpine

WORKDIR /app

# Install serve to run the built app
RUN npm install -g serve

COPY --from=builder /app/dist ./dist

EXPOSE 3000

ENV HOST=0.0.0.0

CMD ["serve", "-s", "dist", "-l", "3000"]
